<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/chat_sender_side"
        android:maxWidth="350dp"
        android:maxHeight="400dp"
        android:minHeight="35dp">

        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="vertical"
            app:layout_constraintGuide_end="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sender_message_text"
            android:maxWidth="250dp"
            android:minWidth="50dp"
            android:inputType="textLongMessage|textMultiLine"
            android:text="HAHAHHAHAHAHA"
            android:fontFamily="@font/ubuntu"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toTopOf="@+id/sender_message_time"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sender_message_time"
            android:layout_marginEnd="6dp"
            android:layout_marginRight="6dp"
            android:textColor="@color/white"
            android:fontFamily="@font/ubuntu"
            android:text="12:56 PM"
            android:layout_marginBottom="5dp"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>